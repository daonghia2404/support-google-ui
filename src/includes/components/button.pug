mixin renderButton(data)
  if data.icon 
    img(src=`${data.icon}`, alt="").button-icon
  if data.title 
    span.button-title= data.title 

mixin Button(data)
  if (data.link)
    a.button-component(href=`${data.link}` class=`${data.className}`).d-flex.align-items-center.justify-content-center
      +renderButton(data)
  else
    if (data.idDropdown)
      button.button-component(type="button" id=`${data.idDropdown}` data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class=`${data.className}`).d-flex.align-items-center.justify-content-center
        +renderButton(data)

    else if (data.tooltip)
      button.button-component(data-delay=`{ "show": 500, "hide": 0 }` data-toggle="tooltip" data-placement=`${data.tooltip.placement}` title=`${data.tooltip.title}` class=`${data.className}`).d-flex.align-items-center.justify-content-center
        +renderButton(data)

    else
      button.button-component(class=`${data.className}`).d-flex.align-items-center.justify-content-center
        +renderButton(data)
